<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Silencio.Views.SignInPage">
    <ContentPage.Content>

    
        <StackLayout VerticalOptions="Center" Padding="50,30,50,15">
            
            <Entry x:Name="emailEntry" Placeholder="Email"></Entry>
            <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True"></Entry>
            
            <Button Text="Sign in" Clicked="SignInClicked" ></Button>
            <Label Text="Click below to create an account." 
                   Margin="10,30,0,0" 
                   FontSize="15"></Label>
            <Button Text="Create an Account" Clicked="SignUpClicked" Margin="50"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>